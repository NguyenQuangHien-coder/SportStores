@*NỘI DUNG TỪNG SẢN PHẨM*@
@model Product

        <div class="container">
            <div class="wrapper">
                <a href="#">
                    @*<img src="https://cdn.mos.cms.futurecdn.net/VSy6kJDNq2pSXsCzb6cvYF.jpg" alt="">*@
                    @*<img src="@Model.Image"/>*@
                    <img src="~/assets/images/@Model.Image"/>
                </a>
                <div class="title">
                    @Model.Name
                </div>
                <div class="place">
                    Surkhet, Nepal
                </div>
            </div>
            <div class="content">
                <p>
                    @Model.Description
                </p>
                <form id="@Model.ProductID" asp-action="AddToCart"
                      asp-controller="Cart" method="post">
                    <input type="hidden" asp-for="ProductID">
                    <input type="hidden" name="returnUrl"
                           value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                    <div class="buttons">
                        <div class="btn">
                            <button type="button">@Model.Price.ToString("c")</button>
                        </div>
                        <div class="btn">
                            <button type="submit">Add to card</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="icons">
                <li><a href="#"><span class="fab fa-facebook-f"></span></a></li>
                <li><a href="#"><span class="fab fa-twitter"></span></a></li>
                <li><a href="#"><span class="fab fa-instagram"></span></a></li>
            </div>
        </div>
    


<script>
        const img = document.querySelector("img");
        const icons = document.querySelector(".icons");
        img.onclick = function () {
            this.classList.toggle("active");
            icons.classList.toggle("active");
        }
</script>






